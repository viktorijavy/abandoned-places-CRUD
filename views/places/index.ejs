
<% layout('layouts/boilerplate')%>


<div id="map" style="width: 100%; height: 400px"></div>

    <h1 class="centered-h1">All places</h1>
    <!-- <div>
        <a href="/places/new">Add a place</a>
    </div> -->
    
    <% for (let place of places){%>
        <div class="card mb-3">
            <div class="row">
                <div class="col-md-4">
                    <img class="img-fluid" alt="image" src="<%=place.images[0].url%>">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h4 class="card-title"> <strong><%= place.title %> </strong></h4>
                        <p class="card-text"><%= place.description.slice(0, 300) %>...</p>
                        <p class="card-text">
                            <small class="text-muted"><%= place.location%></small>
                        </p>
                        <a class="button" href="/places/<%=place._id%>"> More info</a>
                    </div>
                </div>
            </div>
        </div>
        <% }%>
<script src="/cluster-map.js"></script>    
<script>
    // const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
    const places = { features: <%- JSON.stringify(places) %> }
</script>
