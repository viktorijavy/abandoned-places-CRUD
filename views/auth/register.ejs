<% layout('layouts/boilerplate')%>
<div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
<h1>Register</h1>
<form action="/register" method="POST" class="needs-validation" novalidate>
    <div class="mb-3">
        <label class="form-label" for="username">Username</label>
        <input class="form-control input-font" type="text" id="username" name="username" required>
        <div class="valid-feedback">
            Looks good!
        </div>
    </div>
    <div class="mb-3">
        <label class="form-label" for="email">Email</label>
        <input class="form-control input-font" type="email" id="email" name="email" required>
        <div class="valid-feedback">
            Looks good!
        </div>
    </div>
    <div class="mb-3">
        <label class="form-label" for="password">Password</label>
        <input class="form-control input-font" type="password" id="password" name="password" required>
        <div class="valid-feedback">
            Looks good!
        </div>
    </div>
    <button class="button">Register</button>
    <p class="mt-3">Already have an account? <a href="/login">Login</a> </p>
</form>
</div>